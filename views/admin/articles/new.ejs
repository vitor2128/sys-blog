<%- include ("../../partials/header.ejs") %>
    <%- include ("../../partials/navbar.ejs") %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Novo artigo</h2>
                </div>
                <div class="card-body">
                    <form action="/articles/save" method="POST">
                        <label>Selecione a categoria do artigo</label>
                        <select name="category" class="form-control">
                            <% categories.forEach((category) => {%>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <%}) %>
                        </select><br>
                        <input class="form-control" type="text" name="title" placeholder="Titulo do artigo" autofocus><br>
                        <textarea class="form-control" name="body" placeholder="Escreva seu artigo" id="article"></textarea><br>
                        <button class="btn btn-success">Salvar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include ("../../partials/footer.ejs") %>
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insetdatetime media save table paste emoticons'
        ]
    })
</script>